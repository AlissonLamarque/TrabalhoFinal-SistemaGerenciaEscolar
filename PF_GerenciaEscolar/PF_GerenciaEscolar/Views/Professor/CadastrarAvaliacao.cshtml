@using PF_GerenciaEscolar.Data.Enum
@using PF_GerenciaEscolar.ViewModels
@model CreateAvaliacaoViewModel
<!-- VALIDAÇÃO -->

<form method="post" asp-action="CadastrarAvaliacao">
    <div class="mb-3">
        <label asp-for="Titulo" class="form-label">Titulo</label>
        <input asp-for="Titulo" class="form-control" placeholder="Titulo da avaliação">
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Valor" class="form-label">Valor</label>
        <input asp-for="Valor" type="number" class="form-control" placeholder="Valor da avaliação">
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Prazo" class="form-label">Prazo de entrega</label>
        <input asp-for="Prazo" type="date" class="form-control">
        <span asp-validation-for="Prazo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Disciplina" class="form-label">Disciplina</label>
        <select asp-for="Disciplina" asp-items="Html.GetEnumSelectList(typeof(Disciplina))">
            <option>Selecione</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Turma" class="form-label">Turma</label>
        <select asp-for="Turma" asp-items="Html.GetEnumSelectList(typeof(Turma))">
            <option>Selecione</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a asp-controller="administrador" asp-action="DetalhesDisciplina" class="btn btn-secondary my-2">Cancelar</a>

</form>


<style>
    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background: linear-gradient(to right, #ccffff, #1565c0)
    }
</style>