@using PF_GerenciaEscolar.Data.Enum
@model List<Avaliacao>

<!doctype html>
<html lang="en">
<body>
    <main role="main">

        <div class="album py-5 bg-light">
            <section class="jumbotron text-center">
                <div class="container">
                    <h1 class="jumbotron-heading">Avaliações</h1>
                    <a asp-controller="professor" asp-action="CadastrarAvaliacao" class="btn btn-primary my-2">Cadastrar Avaliação</a>
                    <a asp-controller="professor" asp-action="Turmas" class="btn btn-secondary my-2">Voltar</a>
                </div>
            </section>
            <div class="container">
                @if (Model != null)
                {   
                    <div class="row">
                        @foreach (var avaliacao in Model)
                        {
                            <div class="col-md-4">
                                <div class="card mb-4 box-shadow">
                                    <div class="card-body">
                                        <p class="card-text">@avaliacao.Titulo - @avaliacao.Valor</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a asp-controller="professor" asp-action="DetalhesAvaliacao" asp-route-id="@avaliacao.Id" type="button" class="btn btn-sm btn-outline-secondary">Ver</a>
                                                <a asp-controller="professor" asp-action="RemoverAvaliacao" asp-route-id="@avaliacao.Id" type="button" class="btn btn-sm btn-outline-secondary">Remover</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </main>
</body>
</html>


<style>
    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background: linear-gradient(to right, #ccffff, #1565c0)
    }
</style>