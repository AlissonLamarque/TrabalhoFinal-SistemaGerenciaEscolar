@using PF_GerenciaEscolar.Data.Enum
@using PF_GerenciaEscolar.ViewModels
@model CreateAlunoViewModel

<form method="post" asp-action="CadastrarAluno">
    <div class="mb-3">
        <label asp-for="User.Nome" class="form-label">Nome</label>
        <input asp-for="User.Nome" class="form-control" placeholder="Primeiro nome">
        <span asp-validation-for="User.Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="User.Sobrenome" class="form-label">Nome</label>
        <input asp-for="User.Sobrenome" class="form-control" placeholder="Último nome">
        <span asp-validation-for="User.Sobrenome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="User.Email" class="form-label">Email</label>
        <input asp-for="User.Email" class="form-control" placeholder="Digite um email válido">
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.CPF" class="form-label">CPF</label>
        <input asp-for="User.CPF" class="form-control" placeholder="Digite seu CPF">
        <span asp-validation-for="User.CPF" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.PasswordHash" class="form-label">Senha</label>
        <input asp-for="User.PasswordHash" type="password" class="form-control" placeholder="Digite uma senha válida">
        <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Turma" class="form-label">Turma</label>
        <select asp-for="Turma" asp-items="Html.GetEnumSelectList(typeof(Turma))">
            <option>Selecione</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a asp-controller="administrador" asp-action="Turmas" class="btn btn-secondary my-2">Cancelar</a>

</form>


<style>
    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background: linear-gradient(to right, #ccffff, #1565c0)
    }
</style>