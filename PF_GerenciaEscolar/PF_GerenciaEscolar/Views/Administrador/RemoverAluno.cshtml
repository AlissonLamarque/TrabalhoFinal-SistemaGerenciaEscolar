@using PF_GerenciaEscolar.Data.Enum
@using PF_GerenciaEscolar.ViewModels
@model Aluno

<h1 align="center">Tem certeza que deseja remover este aluno?</h1>

<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4">
        <div class=" image d-flex flex-column justify-content-center align-items-center">
            <button class="btn btn-secondary"> <img src="https://th.bing.com/th/id/OIP.xo-BCC1ZKFpLL65D93eHcgHaGe?rs=1&pid=ImgDetMain" height="100" width="100" /></button>
            <div class="d-flex flex-row justify-content-center align-items-center mt-3">
                <span class="follow">@Model.User.Nome</span>
            </div>
            <div class="d-flex flex-row justify-content-center align-items-center mt-3">
                <span class="follow">@Model.User.Email</span>
            </div>
            <div class="d-flex flex-row justify-content-center align-items-center mt-3">
                <span class="follow">@Model.User.CPF</span>
            </div>
            <div class="d-flex flex-row justify-content-center align-items-center mt-3">
                <span class="follow">@Model.Turma</span>
            </div>
        </div>
    </div>
</div>

<form method="post" asp-action="RemoverAlu" asp-route-id="@Model.Id" align="center">
    <button type="submit" class="btn btn-danger float-right mt-3">Remover</button>
    <a asp-controller="administrador" asp-action="DetalhesTurma" asp-route-turma="@Model.Turma" class="btn btn-secondary mt-3">Cancelar</a>
</form>


<style>
    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background: linear-gradient(to right, #ccffff, #1565c0)
    }
</style>