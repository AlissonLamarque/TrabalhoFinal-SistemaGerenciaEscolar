@using PF_GerenciaEscolar.Data.Enum
@model List<Aluno>

<!doctype html>
<html lang="en">
<body>
    <main role="main">
        <div class="album py-5">
            <section class="jumbotron text-center">
                <div class="container">
                    <h1 class="jumbotron-heading">Turma @ViewBag.CodigoTurma</h1>
                    <a asp-controller="administrador" asp-action="Turmas" class="btn btn-secondary my-2">Voltar</a>
                </div>
            </section>
            <div class="container">

                <div class="row">
                    @foreach (var aluno in Model)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                <div class="card-body">
                                    <p class="card-text">@aluno.User.Nome @aluno.User.Sobrenome</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a asp-controller="administrador" asp-action="DetalhesAluno" asp-route-id="@aluno.Id" type="button" class="btn btn-sm btn-outline-secondary">Ver</a>
                                            <a asp-controller="administrador" asp-action="EditarAluno" asp-route-id="@aluno.Id" type="button" class="btn btn-sm btn-outline-secondary">Editar</a>
                                            <a asp-controller="administrador" asp-action="RemoverAluno" asp-route-id="@aluno.Id" type="button" class="btn btn-sm btn-outline-secondary">Remover</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </main>
</body>
</html>


<style>
    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background: linear-gradient(to right, #ccffff, #1565c0)
    }
</style>